<%- include('../includes/head') %>

<h2>Matches</h2>

<section>
    <% if (matches !== undefined & matches !== 'No matches') { %> <% for(var i =
    0; i < matches.length; i++) { %>

    <article class="match-card">
        <h3>
            <%= matches[i].team1 %> - <%= matches[i].team2 %>
        </h3>

        <% if (matches[i].score1 && matches[i].score2) { %>

            <% if (matches[i].finished) { %>

                <p><%= matches[i].score1 %> - <%= matches[i].score2 %> âœ…</p>
        <% } else { %>

        <p>
            <%= matches[i].score1 %> - <%= matches[i].score2 %> (playing..)
        </p>

        <% }%>

        <% } else { %>
            <p>Starting at <%= matches[i].time %></p>
        <% } %>

        <a href="/details/<%= matches[i].id %>">
            <button>
                <span> Details </span>
            </button>
        </a>
    </article>

    <hr class="css-disabled" />

    <% } %>

    <% } else{ %>
        <p>There are no matches</p>
    <% } %>
</section>

<%- include('../includes/end') %>
