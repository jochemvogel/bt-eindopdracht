<%- include('../includes/head') %>

<h2>Add Match</h2>

<a href="/admin">
    <button class="btn">&larr; Go Back</button>
</a>

<section>
	<form action="/admin/add-match" method="POST">
		<div>
			<input type="hidden" name="id" value="<%= id %>" />
		</div>
		<div>
			<label for="team1">Team 1*</label>
			<input type="text" name="team1" required />
		</div>
		<div>
			<label for="team2">Team 2*</label>
			<input type="text" name="team2" required />
		</div>
		<div>
			<label for="time">Time*</label>
			<input type="datetime-local" name="time" required />
		</div>
		<div>
			<label for="score1">Score team 1</label>
			<input type="number" name="score1" id="" />
		</div>
		<div>
			<label for="score2">Score team 2</label>
			<input type="number" name="score2" id="" />
		</div>
		<button type="submit" class="btn add-btn">Save</button>
	</form>
</section>

<%- include('../includes/end') %>
